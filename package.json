{
  "name": "qr-faculty-availability",
  "version": "1.0.0",
  "description": "QR-enabled real-time faculty availability indicator with binary status encoding",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "install-all": "npm install && cd client && npm install",
    "build:production": "NODE_ENV=production cd client && npm install && npm run build",
    "start:production": "NODE_ENV=production node server/index.js",
    "deploy:render": "npm run build:production",
    "seed:production": "NODE_ENV=production node server/seed.js"
  },
  "keywords": ["qr-code", "faculty", "availability", "real-time", "binary-encoding"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.6",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}
